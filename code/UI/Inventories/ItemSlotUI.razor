@using Sandbox
@using Sandbox.UI
@using Sandcube.Inventories
@using Sandcube.Items
@using System
@using Sandcube.Mods


@namespace Sandcube.UI.Inventories
@attribute [StyleSheet]
@inherits Panel

<root>
	<Image class="background" Texture=@BackgroundTexture/>
	@if(!Stack.IsEmpty)
	{
		<Image class="item" Texture=@Stack.Value.Texture/>
	}
</root>


@code
{
	public Stack<Item> Stack { get; set; } = Stack<Item>.Empty;
	public Texture BackgroundTexture { get; set; } = Texture.Load(FileSystem.Mounted, $"textures/sandcube/ui/item_slot_background.png", true) ?? Texture.Invalid;

	protected override int BuildHash() => HashCode.Combine(Stack.GetHashCode(), Stack.Value?.Texture.GetHashCode());
}
