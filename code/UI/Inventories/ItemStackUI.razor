@using Sandbox
@using Sandbox.UI
@using Sandcube.Inventories
@using Sandcube.Items
@using System
@using Sandcube.Mods


@namespace Sandcube.UI.Inventories
@attribute [StyleSheet]
@inherits Panel

<root>
	@if(!Stack.IsEmpty)
	{
		<Image class="item" Texture=@Stack.Value.Texture/>
		@if(Stack.Count > 1 && !HideCount)
		{
			<AdaptiveLabel class="count" FontSize=50%>@Stack.Count</AdaptiveLabel>
		}
	}
</root>


@code
{
	public bool HideCount { get; set; } = false;

	public Stack<Item> Stack { get; set; } = Stack<Item>.Empty;
	protected override int BuildHash() => HashCode.Combine(Stack, Stack.Value?.Texture, HideCount);
}
