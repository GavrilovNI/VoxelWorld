@using Sandbox;
@using Sandbox.UI;
@using VoxelWorld.Players;
@using VoxelWorld.Entities;

@namespace VoxelWorld.UI

@inherits PanelComponent
@implements ILocalPlayerListener

<root>
</root>

@code
{
	private bool _isShowing = false;
	[Property] public bool IsShowing
	{
		get => _isShowing;
		set
		{
			_isShowing = value;
			this.Panel?.SetClass("enabled", value);
		}
	}

	protected override void OnTreeFirstBuilt() => this.Panel?.SetClass("enabled", IsShowing);

	public void OnLocalPlayerCreated(Player player) => IsShowing = true;
	public void OnLocalPlayerDestroyed(Player player) => IsShowing = false;
}